{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
}
